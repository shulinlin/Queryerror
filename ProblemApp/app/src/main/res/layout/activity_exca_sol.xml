<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exca_solActivity">
    <TextView
        android:id="@+id/guzhangTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="故障分析"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/soltitleTextview"
        android:layout_width="78dp"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="解决方法"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r_Listview" />
    <ListView
        android:id="@+id/r_Listview"
        android:layout_width="368dp"
        android:layout_height="236dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/guzhangTitle"
        tools:layout_editor_absoluteX="8dp" />
    <ListView
        android:id="@+id/sol_Listview"
        android:layout_width="368dp"
        android:layout_height="249dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soltitleTextview"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>